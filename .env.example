# Основные настройки Django (замените значения на боевом сервере)
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1

# Настройки базы данных (укажите свои параметры подключения)
DB_ENGINE=django.db.backends.postgresql
DB_OPTIONS=-c search_path=ts_schema
DB_NAME=your_db_name
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# Настройки языка и времени
LANGUAGE_CODE=en-us
TIME_ZONE=UTC
USE_I18N=True
USE_TZ=True

# Редиректы после входа/выхода
LOGIN_REDIRECT_URL=/
LOGOUT_REDIRECT_URL=/accounts/login/ 